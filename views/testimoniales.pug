extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        include ./layout/bloque_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", class="form-control", name="nombre", value="nombre")
                        .form-group
                            label(for="correo") E mail
                            input#correo(type="text", placeholder="Tu correo", class="form-control", name="correo", value="correo")  
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Tu mensaje", class="form-control", rows=3, name="mensaje")= mensaje

                        input.btn.btn-success.btn-block(type="submit")                                